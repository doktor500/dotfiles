function ds() {
  id=$(docker ps | sed 1d | fzf -q "$1" | awk '{print $1}')
  [ -n "$id" ] && docker stop "$id"
}

function drm() {
  id=$(docker ps -a | sed 1d | fzf -q "$1" | awk '{print $1}')
  [ -n "$id" ] && docker rm "$id"
}

function drmi() {
  id=$(docker images | sed 1d | fzf -q "$1" | awk '{print $3}')
  [ -n "$id" ] && docker image rm "$id"
}

